@page
@model Coolbooks.Pages.LogIn.LoginModel
@{

}
<div class=" align-content-end ">

	@if (User.Identity.IsAuthenticated)
	{
		
		<p>@User.Identity.Name, you're looking good! </p>

	}
	else
	{
		<a asp-page="/Login">Sign in</a>
	}

</div>
<div class = "container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credent.Email"></label>
				</div>
				<div class="col-5">
				<input type="text" asp-for="Credent.Email" class="form-control"  ></>
					</div>
					<span class="text-danger" asp-validation-for="Credent.Email"></span>
				</div>

		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credent.Passwordhash"></label>
			</div>
			<div class="col-5">
				<input type="password" asp-for="Credent.Passwordhash" class="form-control" ></>
			</div>
			<span class="text-danger" asp-validation-for="Credent.Passwordhash"></span>
		</div>


		<div class="form-group row">
			<div class="col-2">
				<input type = "submit" class= "btn btn-primary" value="login"/>
			</div>
			<div class="col-5">
			 
			</div>
		</div>
	</form>

</div>
